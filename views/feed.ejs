<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
  <div class="container feed">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-12 col-6 col-md-4 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="feed-img rounded-lg mx-auto d-block img-fluid " src="<%= posts[i].image%>">
            </a>
            <div class="stats shadow">
              <div class="p-1">
                <div class="flex flex-row">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="mt-1 text-rose-500 w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                  <div class="stat-value"><%= posts[i].likes %></div>
                </div>
                <div class="stat-title leading-none">Total Likes</div>
              </div>
            </div>
          </li>
          <% } %>
      </ul>
    </div>
  </div>
<%- include('partials/footer') -%>